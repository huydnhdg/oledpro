
@{
    ViewBag.Title = "Send";
}
<style>
    table td {
        border: none !important;
    }

    textarea {
        width: 300px;
        height: 300px;
    }
</style>
<h2>Gửi Brandname</h2>
<hr />
<div class="row">
    <div class="panel-body">
        <div class="table-responsive">
            <form action="~/Admin/Brandname/Send" method="post">
                <table class="table">
                    <tr>
                        <td style="width:180px;">Dánh sách số điện thoại:</td>
                        <td>
                            <textarea id="lsphone" name="lsphone" class="form-control" rows="10" required></textarea>
                        </td>
                        <td>
                            <i>Số điện thoại ngăn cách nhau bởi dấu [;]</i>
                        </td>
                    </tr>
                    <tr>
                        <td>Nội dung tin nhắn:</td>
                        <td>
                            <textarea id="message" name="message" class="form-control" rows="5" required></textarea>
                        </td>
                        <td>
                            <i>
                                Số ký tự đối đa: Tiếng việt không dấu: 459(3tin)
                                <br/>
                                Template phải được khai báo trước với nhà cung cấp dịch vụ
                            </i>
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" class="btn btn-success" value="Gửi Brandname" />
                        </td>
                        <td></td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</div>


