@model BHDT_OledPro.Models.ApplicationUser
@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-sm-8">
        <h2>@ViewBag.Title</h2>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)

            @Html.HiddenFor(m => m.AccessFailedCount)
            @Html.HiddenFor(m => m.Claims)
            @Html.HiddenFor(m => m.EmailConfirmed)
            @Html.HiddenFor(m => m.LockoutEnabled)
            @Html.HiddenFor(m => m.LockoutEndDateUtc)
            @Html.HiddenFor(m => m.PasswordHash)

            @Html.HiddenFor(m => m.PhoneNumberConfirmed)
            @Html.HiddenFor(m => m.SecurityStamp)
            @Html.HiddenFor(m => m.TwoFactorEnabled)
            @Html.HiddenFor(m => m.Createdate)
            @Html.HiddenFor(m => m.Createby)

            <div class="form-group">

                <label for="UserName">User Name</label>

                @Html.TextBoxFor(m => m.UserName, new { id = "UserName", @class = "form-control", required = "required", @readonly = "readonly" })

            </div>

            <div class="form-group">

                <label for="Email">Email</label>

                @Html.TextBoxFor(m => m.Email, new { id = "Email", @class = "form-control", required = "required" })

            </div>
            <div class="form-group">

                <label for="PhoneNumber">Số điện thoại</label>

                @Html.TextBoxFor(m => m.PhoneNumber, new { id = "PhoneNumber", @class = "form-control", required = "required" })

            </div>

            <div class="form-group">

                <label for="Createdate">Create date</label>

                @Html.TextBoxFor(m => m.Createdate, new { id = "Createdate", @class = "form-control", required = "required", @readonly = "readonly" })

            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Lưu</button>
            </div>
        }
    </div>
</div>



