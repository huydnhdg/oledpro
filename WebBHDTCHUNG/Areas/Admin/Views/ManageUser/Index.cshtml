@using BHDT_OledPro.Models;
@model IEnumerable<ApplicationUser>
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-sm-12">
        <h2>Danh sách tài khoản</h2>
        <div class="btn-right">
            <a href="/admin/account/register" type="button" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Tạo mới</a>
        </div>
        <hr />
        <table class="table table-borderer">
            <thead>
                <tr>
                    <th>Tài khoản</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Ngày tạo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>
                            @if (item.Createdate != null)
                            {
                                @Convert.ToDateTime(item.Createdate).ToString("dd/MM/yyyy")
                            }
                        </td>
                        @if (User.IsInRole("Admin"))
                        {
                    <td>
                        @Html.ActionLink("Sửa Web BrandName", "EditBrandName", new { Id = item.Id }, null) |
                        @Html.ActionLink("Sửa template SMS", "EditSMS", new { Id = item.Id }, null) |
                        @Html.ActionLink("Sửa quyền", "EditRole", new { Id = item.Id }, null) |
                        @Html.ActionLink("Xóa", "Delete", new { Id = item.Id }, null)
                    </td>
                        }
                        else
                        {
                    <td>
                        @Html.ActionLink("Sửa SĐT", "Edit", new { Id = item.Id }, null) |
                        @Html.ActionLink("Sửa quyền", "EditRole", new { Id = item.Id }, null) |
                        @Html.ActionLink("Xóa", "Delete", new { Id = item.Id }, null)
                    </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

