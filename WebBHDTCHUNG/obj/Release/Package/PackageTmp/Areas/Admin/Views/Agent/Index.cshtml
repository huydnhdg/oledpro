@model IEnumerable<BHDT_OledPro.Models.AspNetUser>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Đại lý</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="btn-right">
                    <a href="/admin/account/registeragent" type="button" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Tạo mới đại lý</a>
                    <a href="/admin/agent/uploadlist" type="button" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Gửi sản phẩm</a>
                </div>
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Tài khoản</th>
                                <th>Email</th>
                                <th>Sdt đại lý</th>
                                <th>Ngày tạo</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.UserName</td>
                                    <td>@item.Email</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>
                                        @if (item.Createdate != null)
                                        {
                                            @Convert.ToDateTime(item.Createdate).ToString("dd/MM/yyyy")
                                        }
                                    </td>
                                    <td>
                                        <a class="btn" href="/admin/manageuser/edit/@item.Id"><i class="fa fa-edit fa-fw"></i></a>
                                        <a class="btn" href="/admin/agent/delete/@item.Id"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                        <a class="btn" href="/admin/agent/upload/@item.Id" title="chuyển sản phẩm cho đại lý"><i class="fa fa-ship" aria-hidden="true"></i></a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

