@model IEnumerable<BHDT_OledPro.Models.Brandname>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Brandname</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="btn-right">
                    <a href="/admin/brandname/send" type="button" class="btn btn-success"><i class="fa fa-plane" aria-hidden="true"></i> Gửi brandname</a>
                </div>
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Phone</th>
                                <th>Trạng thái</th>
                                <th>Ngày gửi</th>
                                <th>Message</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.PhoneSend</td>
                                    <td>@item.Status</td>
                                    <td>
                                        @if (item.Createdate != null)
                                        {
                                            @Convert.ToDateTime(item.Createdate).ToString("dd/MM/yyyy")
                                        }
                                    </td>
                                    <td>@item.Message</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>



