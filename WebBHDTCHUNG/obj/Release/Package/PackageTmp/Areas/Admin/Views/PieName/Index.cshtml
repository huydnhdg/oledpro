@model IEnumerable<BHDT_OledPro.Models.PieName>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Tên trong biểu đồ</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="btn-right">
                </div>
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Name1</th>
                                <th>Name2</th>
                                <th>Name3</th>
                                <th>Name4</th>
                                <th>Name5</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name1</td>
                                    <td>@item.Name2</td>
                                    <td>@item.Name3</td>
                                    <td>@item.Name4</td>
                                    <td>@item.Name5</td>
                                    <td>
                                        @if (User.IsInRole("Partner"))
                                        {
                                            <a class="btn" href="/admin/piename/edit/@item.Id"><i class="fa fa-edit fa-fw"></i></a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

